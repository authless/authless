{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "noImplicitAny": false,
        "declaration": true,
        "removeComments": false,
        "declarationMap": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist",
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*",
        "scripts/**/*",
        "**/*.spec.ts"
    ],
    "exclude": [
        "node_modules",
        "./dist/**/**"
    ]
}
